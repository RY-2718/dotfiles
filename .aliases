# fundamental alias
alias rm='rm -i'
alias cp='cp -aip'
alias mv='mv -i'
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -al'

alias vmstat='vmstat -t'
alias relogin='exec $SHELL -l'

# ghq

if type ghq 2>&1 > /dev/null; then
    alias g='cd $(ghq root)/$(ghq list | peco)'
fi

# Source local file.
if [[ -s "$HOME/.aliases_local" ]]; then
    source "$HOME/.aliases_local"
fi
